    "build": "tsc && tsc-alias",
    "start": "node --env-file=.env build/src/server.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "eslint src/**/*.ts --fix"
  },
  "author": {
    "name": "Simão Júnior",
