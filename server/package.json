{
  "name": "caveo-challenge",
  "version": "1.0.0",
  "description": "A challenge project for Caveo",
  "main": "index.js",
  "scripts": {
    "create:env": "node -r fs -e \"fs.copyFileSync('.env.example', '.env', fs.constants.COPYFILE_EXCL)\"",
    "dev": "tsx watch --env-file=.env src/main",
    "build": "tsc && tsc-alias",
    "start": "node --env-file=.env build/main",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "migration:run": "tsx --env-file .env scripts/migration.ts run",
    "migration:revert": "tsx --env-file .env scripts/migration.ts revert"
  },
  "author": {
    "name": "Simão Júnior",
    "email": "simao.msjr@gmail.com"
  },
  "engines": {
    "node": ">=22.17.0"
  },
  "keywords": [],
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@faker-js/faker": "^9.9.0",
    "@testcontainers/postgresql": "^11.5.1",
    "@types/koa": "^3.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.3.0",
    "pino-pretty": "^13.1.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.865.0",
    "@koa/router": "^14.0.0",
    "koa": "^3.0.1",
    "koa-body": "^6.0.1",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26",
    "zod": "^4.0.17"
  }
}
